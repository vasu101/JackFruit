<div class="centered-half">
  
  <div class="row">
    
    <h3 class="pink-text">Sign Up as {{ofRole}}</h3>
      <form class="col s12" action="/{{ofRole}}/signup" method="post" enctype="multipart/form-data">
        <div class="row">
          <div class="input-field col s6">
            <i class="material-icons prefix">account_circle</i>
            <input required placeholder="Username" name="username" id="username" type="text" class="validate">
            <label for="username">Username</label>
          </div>

          
          <div class="input-field col s6">
            <i class="material-icons prefix">lock</i>
            <input required id="password" type="password" name="password" class="validate">
            <label for="password">Password</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">face</i>
            <input required placeholder="Name" name="name" id="name" type="text" class="validate">
            <label for="name">Name</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s6">
            <i class="material-icons prefix">home</i>
            <input required placeholder="Address" name="address" id="address" type="text" class="validate">
            <label for="address">Address</label>
          </div>

          <div class="input-field col s6">
            <i class="material-icons prefix">phone</i>
            <input required placeholder="phone" name="phone" id="phone" type="text" class="validate">
            <label for="phone">Phone</label>
          </div>
        </div>

        
        {{#ifCond ofRole "hotel"}}
          <div class="row">
            <div class="input-field col s12">
              
              <span>
                  Delivery:
                  <label>
                      <input required type="radio" name="delivery" value=1 id="">
                      <span>Yes</span>
                  </label>
                  <label>
                      <input required type="radio" name="delivery" value=0 id="" checked>
                      <span>No</span>
                  </label>
              </span>
            </div>
          </div>


          <div class="row">
            <div class="input-field col s12">
              
              <span>
                  Open:
                  <label>
                      <input required type="radio" name="open" value=1 id="" checked>
                      <span>Yes</span>
                  </label>
                  <label>
                      <input required type="radio" name="open" value=0 id="">
                      <span>No</span>
                  </label>
              </span>
            </div>
          </div>
      {{/ifCond}}


        <div class="file-field input-field">
          <div class="btn">
            <span>Image</span>
            <input required onchange=preview(this) type="file" id="image" name="image" accept="image/*">
          </div>
          <div class="file-path-wrapper">
            <input required class="file-path validate" type="text">
          </div>
        </div>

        <div class="row">
          <img src="" alt="" id="pre" style="display: none;">
        </div>

        {{#ifCond ofRole "hotel"}}
          <div class="row">
            <div class="input-field col s12">
              <i class="material-icons prefix">info</i>
              <input required name="delivery_cost" id="delivery_cost" type="number" class="validate">
              <label for="delivery_cost">Delivery cost</label>
            </div>
          </div>
        {{/ifCond}}


        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">info</i>
            <input required placeholder="Bio" name="bio" id="bio" type="text" class="validate">
            <label for="bio">Bio</label>
          </div>
        </div>

      <button class="btn waves-effect waves-light" type="submit" name="action">
          Signup
          <i class="material-icons right">create</i>
      </button>
        
      </form>
      <center><h6>Already a {{ofRole}}? <a class="pink-text" href="/{{ofRole}}/login">Login</a></h6></center>
  </div>
</div>



<script>
    
  let preview = (e) => {
          var file = document.querySelector("#image").files[0]
          
          var img = document.getElementById("pre");
          img.style.display = 'block';
          var reader = new FileReader();
          reader.onloadend = function() {
              img.src = reader.result;
          }
          reader.readAsDataURL(file);
  };


</script>





























